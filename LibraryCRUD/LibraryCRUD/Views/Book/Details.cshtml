@model Book

@{
    ViewData["Title"] = Model.Title;
}
<div class="row mt-60-px" >
    <div class="col-md-3">
        <img src="data:image/*;base64,@Convert.ToBase64String(Model.Cover)" alt="@Model.Title" class="img-thumbnail rep-cover" />
    </div>
    <div >
        
    </div>
    <div class="col-md-8">
        <div class="d-flex justify-content-between mb-2">
            <h3>@Model.Title</h3>
            <span class="mt-2">
                <i class="bi bi-star-fill text-warning"></i>
                <span class="text-muted">@Model.Rate.ToString("0.0")</span>
            </span>
        </div>
        <div class="mt-2 ">
            <h6 class="card-subtitle text-muted mb-2 ">@Model.Author.Name</h6>
        </div>
        <div class="mt-2">
            <span class="text-muted mr-2">
                <i class="bi bi-clipboard-data text-primary"></i>
                @Model.Year
            </span>
            <span class="text-muted">
                <i class="bi bi-bookmark text-danger"></i>
                @Model.Category.Name
            </span>
        </div >
        <div class="mt-3 text-justify">
            <p>@Model.Description</p>
        </div>
    </div>
</div>